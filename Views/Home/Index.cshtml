<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojodachi</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center col-lg-6 col-md-6 col-sm-6 col-xs-6"><br>
        <div class="display">
            <!-- <p>Fullness: _ Happiness: _ Meals: _ Energy: _</p> -->
            <table class="table table-bordered">
                <tr>
                    <td>Fullness: @ViewBag.fullness</td>
                    <td>Happiness: @ViewBag.happiness</td>
                    <td>Meals: @ViewBag.meals</td>
                    <td>Energy: @ViewBag.energy</td>
                </tr>
            </table>
        </div>
        <div class="jumbotron text-center">
            <img class="center" src="http://www.pngall.com/wp-content/uploads/2016/04/Potato-High-Quality-PNG.png" height="150px" alt="potato"><br><br>
            <p>@ViewBag.action</p><br>
        @{if(ViewBag.happiness > 1 && ViewBag.happiness < 100 && ViewBag.fullness > 1 && ViewBag.fullness < 100 && ViewBag.energy < 100)
            {
                <a href="/feed" class="btn btn-success btn" role="button">Feed</a>
                <a href="/play" class="btn btn-danger btn" role="button">Play</a>
                <a href="/work" class="btn btn-warning btn" role="button">Work</a>
                <a href="/sleep" class="btn btn-primary btn" role="button">Sleep</a>
            }
            if(ViewBag.fullness > 99 && ViewBag.happiness > 99 && ViewBag.energy > 99)
            {
                <a href="/restart" class="btn btn-primary btn" role="button">Play Again?</a>
            }
            if(ViewBag.happiness < 1 || ViewBag.fullness < 1)
            {
                <a href="/restart" class="btn btn-primary btn" role="button">Play Again?</a>
            }
            
        }
        </div>
    </div>
</body>
</html>